//PROBLEM 3: 
using System;

    class Program
    {
        static void Main(string[] args)
        {
        //Declarations
        string name;
        int days;
        double totalMiles;
        double mpg;
        double gasPrice;
        double hotelCostPerN;
        double foodBudget;
        double gasNeeded;
        double gasCost;
        double hotelCost;
        double foodCost;
        double totalTriCos;

        //Welcome Message
        Console.WriteLine("--------------Welcome to Road Trip Budget Estimator! --------\n");

        //Inputs
        Console.Write("Please enter your name: ");
        name = Console.ReadLine();

        Console.Write("How many days is your trip? ");
        days = Convert.ToInt32(Console.ReadLine());

        Console.Write("How many miles will you be traveling? ");
        totalMiles = Convert.ToDouble(Console.ReadLine());

        Console.Write("What is your vehicles MPG (Miles Per Gallon) ?");
        mpg = Convert.ToDouble(Console.ReadLine());

        Console.Write("What is the average cost of gas in your state? ");
        gasPrice = Convert.ToDouble(Console.ReadLine());

        Console.Write("WHat is your nightly hotel cost?");
        hotelCostPerN = Convert.ToDouble(Console.ReadLine());

        Console.Write("What is your daily food budget?");
        foodBudget = Convert.ToDouble(Console.ReadLine());
        //CALCS
        gasNeeded = totalMiles / mpg;
        gasCost = gasNeeded * gasPrice;
        hotelCost = hotelCostPerN * (days - 1);
        foodCost = foodBudget * days;
        totalTriCos = gasCost + hotelCost + foodCost;
        //Display
        Console.WriteLine("\n--------------------Road Trip Budget Summary------------------");
        Console.WriteLine($"Name: {name}");
        Console.WriteLine($"Trip Durations: {days} days.");
        Console.WriteLine($"Total Miles: {totalMiles} miles.");
        Console.WriteLine($"Fuel Efficiency: {mpg} mpg.");
        Console.WriteLine($"Gas Price: ${gasPrice:F2}");
        Console.WriteLine($"Hotel Cost Per Night: ${hotelCostPerN:F2}");
        Console.WriteLine($"Daily Food Budget: ${foodBudget:F2}");
        Console.WriteLine("----------------------------------------------------------------------------");
        Console.WriteLine($"Gas Needed: {gasNeeded:F2} gallons.");
        Console.WriteLine($"Estimated Gas Cost: ${gasCost:F2}");
        Console.WriteLine($"Estimated Hotel Cost: ${hotelCost:F2}");
        Console.WriteLine($"Estimated Food Cost: ${foodCost:F2}");
        Console.WriteLine("-----------------------------------------------------------------------------");
        Console.WriteLine("Thank You for using Road Trip Budget Simulator. ");
        

        }
    }
