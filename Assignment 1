//Problem 5
using System;


    class Program
    {
        static void Main()
        {
        string name;
        int speed;
        string plan;
        double basePlan = 0.0;
        double staticCost = 0.0;
        double sub;
        double tax;
        double tot;
        Console.WriteLine("****** Welcome to AT&T Fiber Internet Billing System ******");

        //user promopy
        Console.Write("Please enter your name: ");
        name = Console.ReadLine();

        Console.Write("Select Internet Plan Speed ( 300 | 500 | 1000| 2000 | 5000 Mbps): ");
        speed = Convert.ToInt32(Console.ReadLine());

        Console.Write("Would yiou like to add Static Ip? Y/ N :");
        plan = Console.ReadLine().ToUpper();

        switch (speed)
        {
            case 300:
                basePlan = 55.00;
                break;
            case 500:
                basePlan = 65.00;
                break;
            case 1000:
                basePlan = 80.00;
                break;
            case 2000:
                basePlan = 110.00;
                break;
            case 5000:
                basePlan = 180.00;
                break;
        }
        if(plan == "Y")
        {
            staticCost = 15.00;
        }

        sub = basePlan + staticCost;
        tax = sub * 0.095;
        tot = sub + tax;
        Console.WriteLine("\n----------------------------- AT&T FIBER BILLING SUMMARY --------------------------");
        Console.WriteLine($"Customer Name: {name}");
        Console.WriteLine($"Plan Speed: {speed} Mbps");
        Console.WriteLine($"Base Price: ${basePlan:F2}");
        Console.WriteLine($"Static IP: ${staticCost:F2}");
        Console.WriteLine("--------------------------------------------");
        Console.WriteLine($"Subtotal: ${sub:F2}");
        Console.WriteLine($"Tax (9.5%): ${tax:F2}");
        Console.WriteLine("--------------------------------------------");
        Console.WriteLine($"Total Due: ${tot:F2}");
        Console.WriteLine("---------------------------------------------------------------------------------------------------------");
        Console.WriteLine("Thank you for choosing AT&T Fiber!");
    }
    }


