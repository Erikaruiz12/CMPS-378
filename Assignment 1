//PROBLEM 1:
using System;

class Program
{
    static void Main()
    {
        string name;
        string gender;
        string means;
        int age;
        int fHeight;
        int iHeight;
        int totInches;
            double weight;
        double bmi;
        //Ask the user for name ,age ,gender , height, and weight.
        Console.Write("Please enter your name: ");
        name = Console.ReadLine();
        Console.Write("Please enter your age: ");
        age = Convert.ToInt32(Console.ReadLine());
        Console.Write("Please enter your gender (M/F) : ");
        gender = Console.ReadLine();
        Console.Write("Please enter your height (Feet) : ");
        fHeight = Convert.ToInt32(Console.ReadLine());
        Console.Write("Please enter your height (Inches) : ");
        iHeight = Convert.ToInt32(Console.ReadLine());
        Console.Write("Please enter your weight (Pounds) :  ");
        weight = Convert.ToDouble(Console.ReadLine());
        //changes heigh to inches
        totInches = (fHeight * 12) + iHeight;
        //BMI CALCULATE
        bmi = 703 * (weight / (totInches * totInches));
        if (bmi < 16)
        {
            means = "Servere Thiness";
        }
        else if (bmi < 17)
        {
            means = "Moderate Thiness";
        }
        else if (bmi < 18.5)
        {
            means = "Wild Thiness";

        }
        else if (bmi < 25)
        {
            means = "Average ";

        }
        else if (bmi < 30)
        {
            means = "Overweight";
        }
        else if (bmi < 35)
        {
            means = "Obese Class I ";

        }
        else if (bmi <40) {
            means = "Obese Class II ";
        
        }
        else
        {
            means = "Obese Class III ";
        }
        Console.WriteLine();
        Console.WriteLine($"Hi {name}, ");
        Console.WriteLine($"You are a {gender}. You are {age} year old.");
        Console.WriteLine($"You are currently {fHeight} feet {iHeight} inches tall and weigh {weight} pounds.");
        Console.WriteLine($"Your BMI is {bmi:F1}, which means {means}.");
        Console.WriteLine("Thank you for using BMI Calculator! ");
    }
}
