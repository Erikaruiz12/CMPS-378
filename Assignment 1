//PROBLEM 4
using System;



class Program
{

    static void Main()
    {
        // declarations
        string name;
        double kWh;
        double hcf;
        double elecCost = 0.0;
        double elecCharge;
        double watCost = 0.0;
        double watCharge;
        double bill;
        Console.WriteLine("****** Welcome to LADWP Utility Bill Calculator ******");

        //user inputs
        Console.Write("Enter your name: ");
        name = Console.ReadLine();

        Console.Write("Enter Electricity Usagae (kWh): ");
        kWh = Convert.ToDouble(Console.ReadLine());

        Console.Write("Enter Water usage (HCF)");
        hcf = Convert.ToDouble(Console.ReadLine());

        if (kWh < 0)
        {
            Console.WriteLine("Cannot input a negative number! Try again.");
        }
        //Rate Calculations
        else if (kWh <= 199)
        {
            elecCost = 0.13;
        }
        else if (kWh <= 499)
        {
            elecCost = 0.17;
        }
        else if (kWh <= 999)
        {
            elecCost = 0.21;
        }
        else if (kWh >= 1000)
        {
            elecCost = 0.26;
        }
        //Calculations 
        elecCharge = kWh * elecCost;

        //Water usuage calulations
        if (hcf < 0)
        {
            Console.WriteLine("You cannot use a negative amout of water. Try Again.");
            return;
        }
        else if (hcf <= 9)
        {
            watCost = 2.30;
        }
        else if (hcf <= 24)
        {
            watCost = 3.10;

        }
        else if (hcf <= 39)
        {
            watCost = 4.20;
        }
        else
        {
            watCost = 5.15;
        }
        watCharge = hcf * watCost;

        bill = elecCharge + watCharge;
        //display
        Console.WriteLine("\n------------------ LADWP MONTHLY BIL------------------------");
        Console.WriteLine($"Customer Name: {name}");
        Console.WriteLine($"Electricatty Usage: {kWh} kWh");
        Console.WriteLine($"Rate Applied: ${elecCost:F2} per kWh");
        Console.WriteLine($"Electricity Charge: ${elecCharge:F2}");
        Console.WriteLine($"Water Usage: {hcf} HCF");
        Console.WriteLine($"Rate Applied: ${watCost:F2} per HCF");
        Console.WriteLine($"Water Charge: ${watCharge:F2}");
        Console.WriteLine("------------------------------------------");
        Console.WriteLine($"Total Amount Due: ${bill:F2}");
        Console.WriteLine("----------------------------------------------------------------------------");
        Console.WriteLine("Thank you for using LADWP!");
    }
}
